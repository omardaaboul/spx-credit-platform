# Core mode flags
SIMULATION_MODE=true
FEATURE_0DTE=false
ALLOW_SIM_ALERTS=false
STRICT_LIVE_BLOCKS=true

# Broker auth (choose OAuth OR username/password)
TASTY_USERNAME=
TASTY_PASSWORD=
TASTY_CLIENT_SECRET=
TASTY_REFRESH_TOKEN=
TASTY_IS_TEST=false
TASTY_MARKETDATA_IS_TEST=false
TASTY_ACCOUNT_NUMBER=

# Telegram alerts
SPX0DTE_ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Backward-compatible alias (optional)
# TELEGRAM_TOKEN=

# Persistence / app paths
SQLITE_PATH=/opt/spx/data/spx.db
SPX0DTE_CANDIDATE_STORE_PATH=/opt/spx/data/candidates.json
SPX0DTE_TRADE_STORE_PATH=/opt/spx/data/trades.json
SPX0DTE_TELEGRAM_STATE_PATH=/opt/spx/data/telegram_state.json

# API protection (optional)
API_KEY=

# Runtime tuning
SPX0DTE_DEBUG=false
SPX0DTE_ENTRY_STABILITY_TICKS=2
SPX0DTE_EVAL_INTERVAL_MS=60000
SPX0DTE_STALE_MAX_SECONDS=90
SPX0DTE_PAPER_TRADING=true
SPX0DTE_PAPER_DRY_RUN=true
SPX0DTE_PAPER_REQUIRE_TEST=true
SPX0DTE_PAPER_ACCOUNT_NUMBER=

# Volatility regime tuning
VOL_LOOKBACK_DAYS=60
VOL_MIN_SAMPLES=20
VOL_PCTL_LOW=25
VOL_PCTL_HIGH=70
VOL_PCTL_EXTREME=90
VOL_IV_MAX_AGE_MS=5000
VOL_IV_RV_SUPPRESSED=0.8
VOL_IV_RV_EXPANDING=1.6
VOL_TERM_SLOPE_EXPANDING=0.03
SHOCK_MOVE_PCT_EM1SD=0.35
SHOCK_VIX_JUMP=2.0
VOL_POLICY_EXPANDING_ALLOW_2DTE=false
VOL_POLICY_EXTREME_BLOCK_ALL=false
SPX0DTE_IV_CACHE_PATH=

# Optional process overrides
SPX0DTE_PYTHON_BIN=
PYTHONPATH=
NODE_ENV=development
